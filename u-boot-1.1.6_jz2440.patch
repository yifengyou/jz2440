+    PrintEpiPkt(ep1Buf,EP1_PKT_SIZE); 
+    
+    transferIndex++;
+
+    PrepareEp1Fifo(); 
+    	//IN_PKT_READY is set   
+    	//This packit will be used for next IN packit.	
+
+    return;
