+
+    if(out_csr3 & EPO_OUT_PKT_READY)
+    {   
+	fifoCnt=usbdevregs->OUT_FIFO_CNT1_REG; 
+#if 0
+	RdPktEp3(ep3Buf,fifoCnt);
