+void PrepareEp1Fifo(void) 
+{
+    int i;
+    U8 in_csr1;
+    usbdevregs->INDEX_REG=1;
+    in_csr1=usbdevregs->EP0_CSR_IN_CSR1_REG;
+    
+    for(i=0;i<EP1_PKT_SIZE;i++)ep1Buf[i]=(U8)(transferIndex+i);
+    WrPktEp1(ep1Buf,EP1_PKT_SIZE);
+    SET_EP1_IN_PKT_READY(); 
+}
